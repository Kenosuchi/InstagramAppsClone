<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    android:background="@drawable/button_black_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_item_search"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/user_name_item_seach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User name"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/user_image_item_search"/>
        <TextView
            android:id="@+id/user_full_name_item_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Profile Name"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/user_name_item_seach"/>
        <Button
            android:id="@+id/user_follow_btn_item_search"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/user_full_name_item_search"
            android:layout_centerHorizontal="true"
            android:text="Follow"
            android:background="@drawable/button_black_background"
            android:textAllCaps="false"
            android:layout_margin="10dp"/>
    </RelativeLayout>

</RelativeLayout>